# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# DeepSeek（推荐，性价比高，中文友好）
# 需同时修改 config/cword.yaml 中的 base_url
