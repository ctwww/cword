# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Ollama（本地部署，通常不需要 API Key）
# 安装: https://ollama.ai/
# OLLAMA_BASE_URL=http://localhost:11434

# LocalAI
# LOCALAI_API_KEY=not-needed

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ⚙️  系统配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 语言设置: "zh" = 中文, "en" = English
CWORD_LANGUAGE=zh

# 日志级别: DEBUG, INFO, WARNING, ERROR
CWORD_LOG_LEVEL=INFO

# LLM 最大生成 token 数
CWORD_MAX_TOKENS=2000

# LLM 温度参数（0.0-1.0，越高越随机）
CWORD_TEMPERATURE=0.7
